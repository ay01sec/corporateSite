{
  "hosting": {
    "site": "corpolate-b2fa7",
    "public": ".",
    "ignore": ["**/.*", "**/node_modules/**", "firebase.json", ".firebaserc"],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "**/*.@(css|js|mjs|ico|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot|mp4|webm)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ],
    "rewrites": []
  }
}
